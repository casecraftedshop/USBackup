# Backup Directory
BACKUP_DIRECTORY=/home/ubuntu/backups/

# Backup Interval (Cron Format)
BACKUP_INTERVAL="0 */8 * * *"  # Every 8 hours

# USB Device Configuration
USB_DEVICE_PATH=/dev/sdb1
USB_SERIAL_NUMBER=$(pass backup/USB_SERIAL_NUMBER)

# HDD Device Configuration
HDD_DEVICE_PATH=/dev/sdb2
HDD_SERIAL_NUMBER=$(pass backup/HDD_SERIAL_NUMBER)

# Network Device Configuration (Using GitHub SSH key for authentication)
NETWORK_DEVICE_PATH=//192.168.1.100/shared
NETWORK_USERNAME=$(pass backup/NETWORK_USERNAME)
NETWORK_PASSWORD=$(cat ~/.ssh/id_rsa)  # Use the GitHub SSH private key as the network password
NETWORK_SERIAL_NUMBER=NAS123456

# Remote Server Configuration (Using GitHub SSH key for authentication)
REMOTE_HOST=15.223.3.155
REMOTE_USER=$(pass backup/REMOTE_USER)
REMOTE_PATH=/remote/backup/path
SSH_KEY_PATH=~/.ssh/id_rsa  # Path to the private SSH key from GitHub

# Backup Encryption Passphrase
BACKUP_ENCRYPTION_PASSPHRASE=$(pass backup/BACKUP_ENCRYPTION_PASSPHRASE)

# Notification Email Configuration
NOTIFICATION_EMAIL=your-email@example.com

# GPG Configuration
GNUPG_HOME=/home/ubuntu/.gnupg  # Path to the GPG home directory

# Logging Configuration
LOGGING_LEVEL=ERROR  # Set to ERROR to avoid logging excessive information

# SFTP Private Key for File Transfers
SFTP_PRIVATE_KEY=$(pass backup/SFTP_PRIVATE_KEY)

# SMTP Configuration (Optional for notifications)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=$(pass backup/SMTP_USER)
SMTP_PASSWORD=$(pass backup/SMTP_PASSWORD)  # Securely stored using pass
SMTP_USE_TLS=true
SMTP_USE_SSL=false
