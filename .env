# Backup Directory
BACKUP_DIRECTORY=/home/ubuntu/backups/

# Backup Interval (Cron Format)
BACKUP_INTERVAL="0 */8 * * *"  # Every 8 hours

# USB Device Configuration
USB_DEVICE_PATH=/dev/sdb1
USB_SERIAL_NUMBER=08606E6D413DF330170C2ECC

# HDD Device Configuration
HDD_DEVICE_PATH=/dev/sdb2
HDD_SERIAL_NUMBER=12345ABCDE

# Network Device Configuration
NETWORK_DEVICE_PATH=//192.168.1.100/shared
NETWORK_USERNAME=network_user  # Securely stored using pass
NETWORK_PASSWORD=network_password  # Securely stored using pass
NETWORK_SERIAL_NUMBER=NAS123456

# Remote Server Configuration
REMOTE_HOST=15.223.3.155
REMOTE_USER=ubuntu
REMOTE_PATH=/remote/backup/path
SSH_KEY_PATH=/home/ubuntu/.ssh/id_rsa  # Path to the private SSH key

# Backup Encryption Passphrase
BACKUP_ENCRYPTION_PASSPHRASE=strong_secure_passphrase_here  # Use GPG encryption to secure the passphrase

# Notification Email Configuration
NOTIFICATION_EMAIL=your-email@example.com

# GPG Configuration
GNUPG_HOME=/home/ubuntu/.gnupg  # Path to the GPG home directory

# Logging Configuration
LOGGING_LEVEL=ERROR  # Set to ERROR to avoid logging excessive information

# SFTP Private Key for File Transfers
SFTP_PRIVATE_KEY=/home/ubuntu/.ssh/id_rsa

# SMTP Configuration (Optional for notifications)
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp_user
SMTP_PASSWORD=smtp_password  # Secure this value using pass or KeePassXC
SMTP_USE_TLS=true
SMTP_USE_SSL=false
