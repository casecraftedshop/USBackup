{
  "backup_directory": "/mnt/remote/backup_directory",
  "backup_interval": "@daily",
  "storage_devices": [
    {
      "device_path": "/mnt/network_drive",
      "mount_point": "/mnt/remote",
      "device_type": "Network",
      "is_enabled": true,
      "encryption": "aes256",
      "network_username": "synology_user",
      "network_password": "network_password_here",
      "health_check": true,
      "logging_level": "ERROR",
      "notification_enabled": true
    }
  ],
  "remote_host": "remote.lightsail.aws",
  "remote_user": "ubuntu",
  "remote_path": "/home/ubuntu/backups",
  "ssh_key_path": "/home/user/.ssh/backup_key.pem",
  "data_to_backup": [
    "/path/to/data/to/backup"
  ],
  "notification_email": "notification@example.com",
  "logging_level": "ERROR"
}
