{
  "backup_directory": "/home/ubuntu/backups/",
  "backup_interval": "0 */8 * * *",
  "storage_devices": [
    {
      "device_path": "/dev/sdb1",
      "mount_point": "/mnt/usb",
      "device_type": "USB",
      "is_enabled": true,
      "encryption": "false"
    },
    {
      "device_path": "//192.168.2.10/shared_folder",
      "mount_point": "/mnt/network_drive",
      "device_type": "Network",
      "is_enabled": true,
      "encryption": "true",
      "network_username": "${NETWORK_USERNAME}",
      "network_password": "${NETWORK_PASSWORD}"  // Handle using environment variables or secret manager
    }
  ],
  "remote_host": "${REMOTE_HOST}",
  "remote_user": "${REMOTE_USER}",
  "remote_path": "${REMOTE_PATH}",
  "ssh_key_path": "${SSH_KEY_PATH}",
  "data_to_backup": [
    "/path/to/data/to/backup"
  ],
  "logging_level": "ERROR",
  "notification_email": "${NOTIFICATION_EMAIL}"
}
